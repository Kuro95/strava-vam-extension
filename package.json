{
  "name": "strava-vam-extension",
  "version": "1.0.4",
  "description": "Track and display your VAM (Vertical Ascent Meters per hour) personal bests across all Strava activities",
  "scripts": {
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "node scripts/build.js",
    "build:bash": "bash scripts/build.sh",
    "package": "node scripts/package.js",
    "package:bash": "bash scripts/package.sh",
    "validate": "web-ext lint --source-dir=dist",
    "validate:package": "node scripts/validate-package.js",
    "dev": "web-ext run --source-dir=dist --firefox-preview",
    "sign": "web-ext sign --source-dir=dist --artifacts-dir=artifacts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Kuro95/strava-vam-extension.git"
  },
  "keywords": [
    "strava",
    "vam",
    "cycling",
    "climbing",
    "firefox",
    "extension",
    "browser-extension"
  ],
  "author": "Kuro",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Kuro95/strava-vam-extension/issues"
  },
  "homepage": "https://github.com/Kuro95/strava-vam-extension#readme",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "archiver": "^6.0.0",
    "eslint": "^8.52.0",
    "eslint-plugin-mozilla": "^3.6.0",
    "fflate": "^0.8.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "web-ext": "^7.9.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}