{
  "manifest_version": 2,
  "name": "Strava VAM Extension",
  "version": "1.0.7",
  "description": "Track and display your VAM (Vertical Ascent Meters per hour) personal bests across all Strava activities.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_title": "Strava VAM",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "storage",
    "https://www.strava.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.strava.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "applications": {
    "gecko": {
      "id": "strava-vam@extension.com",
      "strict_min_version": "109.0"
    }
  }
}
