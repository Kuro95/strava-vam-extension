{
  "manifest_version": 3,
  "name": "Strava VAM Extension",
  "version": "1.0.7",
  "description": "Track and display your VAM (Vertical Ascent Meters per hour) personal bests across all Strava activities",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://www.strava.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.strava.com/activities/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "background": {
    "scripts": ["background.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "strava-vam@extension.com",
      "strict_min_version": "109.0"
    }
  }
}
